<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:gravity="bottom"
	android:background="@color/principal"
	android:padding="40dp"
	android:id="@+id/nav_header_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="top"
	android:theme="@style/ThemeOverlay.AppCompat.Dark">

	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_height="wrap_content">

	<ImageView
		android:src="@drawable/currency_eur"
		android:layout_width="80dp"
		android:layout_height="80dp"/>
		<LinearLayout
			android:layout_marginBottom="2dp"
			android:layout_gravity="bottom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
			android:paddingBottom="5dp"
			android:paddingRight="5dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/princi"
			android:text="@string/economize"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold"/>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/nomeCompleto"
		android:textColor="@color/princi"
		android:text="Manuel Alfreddo"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"/>
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:padding="5dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/princi"
				android:text="@string/carteira"
				android:textAppearance="?android:attr/textAppearanceListItemSmall"
				android:textStyle="bold"/>
		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="60dp"
			android:background="@color/segundaria"/>
		<LinearLayout
			android:layout_marginLeft="5dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/saldoMensal"
			android:textColor="@color/colorWhite"
			android:text="45000"
			android:textAppearance="?android:attr/textAppearanceListItemSmall"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/header_moeda"
			android:layout_width="wrap_content"
			android:layout_marginLeft="3dp"
			android:layout_height="wrap_content"
			android:textColor="@color/colorWhite"
			android:text="Euro"
			android:textAppearance="?android:attr/textAppearanceListItemSmall"
			android:textStyle="bold"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>

