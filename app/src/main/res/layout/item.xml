<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView1"
	android:background="#fff"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">
    
    <LinearLayout
		android:id="@+id/linerlayout_item"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:focusable="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="2dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/avatar_orcamento"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:background="@drawable/finance"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="2dp"
					android:id="@+id/itemTextViewCategoria_orcamento"
					android:text="Orçamento"
					android:textColor="@color/colorPrimaryDark"
					android:textSize="16sp"
					android:textStyle="bold"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textColor="@color/segundaria"
					android:layout_marginHorizontal="2dp"
					android:text="Alimentação durante o mês de Setembro"
					android:textSize="16sp"
					android:id="@+id/cardTextView1descricao_orcamento"/>

			</LinearLayout>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/segundaria"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="3dp"
				android:orientation="horizontal">

				<LinearLayout
					android:id="@+id/like_orcamento"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Dinheiro"
						android:textSize="12sp"
						android:textStyle="bold"/>
					
					<TextView
						android:textSize="12sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="80€0"
						android:id="@+id/cardTextView1Saldo"/>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/share"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="@string/gastei"
						android:textSize="12sp"
						android:textStyle="bold"/>

					<TextView
						android:textSize="12sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/itemTextViewOrcamentoGasto"
						android:gravity="center"
						android:text="89$"/>

				</LinearLayout>
				
				<LinearLayout
					android:id="@+id/comment"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical">
				
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="@string/mes"
						android:textStyle="bold"
						android:textSize="12sp"/>

					<TextView
						android:textSize="12sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:id="@+id/itemTextViewOrcamentoData"
						android:text="05/05/2005"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>